  <tr><td>end</td>             <td><%= @user.setime && l(@user.setime, :format => :default) %></td></tr>
  <tr><td colspan="2"><hr style="margin:5px 0"/></td></tr>
  
  <tr><td>Weekend</td>         <td><%= @user.weekend %></td></tr>
