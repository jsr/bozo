<!DOCTYPE html>
<html>
  <head>
    <title>Bozo</title>
    <%= stylesheet_link_tag :all %>
    <%= stylesheet_link_tag '10gen/jquery-ui' %>
    <%= javascript_include_tag "jquery", "jquery-ui.min", "highcharts" %>
    <%= javascript_include_tag "rails", "application" %>

    <%= csrf_meta_tag %>

    <% if @page_auto_refresh  %>
      <script type="text/javascript">
        $(document).ready(function() {
          setInterval("TENGEN.util.Doc.reloadPage(true)", 60000);
        });
      </script>
    <% end %>

  </head>

  <body style="padding:0 20px">
    <%= render 'layouts/header' %>
    <br/>

    <p class="notice"><%= notice || flash[:notice] %> </p>
    <p class="error"><%= flash[:error] %> </p>
    <p class="warning"><%= flash[:warning] %> </p>

    <%= yield %>

    <%= render 'layouts/footer' %>
  </body>
</html>
