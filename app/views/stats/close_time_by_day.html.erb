<script type="text/javascript">
    $(function() {
        new Highcharts.Chart({
            chart: {
                renderTo: "chart_chart"
            },
            title: {
                text:"Avg closing time for issues opened on the given date - <%= l(@current_date, :format => :long_mon) %>"
            },
            xAxis: {
                categories: [<%= @data_x.map { |x| "'#{x}'" }.join(',') %>]
            },
            yAxis: {
                title: {
                    text: "Hours"
                }
            },
            series: [
                {
                    name: "Articles",
                    data: <%= @data_y %>
                }
            ]
        });
    });

</script>

<div id="chart_chart" style="width:560px; height:300px;">

</div>