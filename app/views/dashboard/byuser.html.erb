
<% @page_auto_refresh = true %>

<h3>User : <%= @user.email %></h3>

<%= render :partial => "/dashboard/article_update_form" %>

<h3>Articles without a reply, not closed</h3>

<table id="articles-without-reply-and-not-closed">
  <thead>
    <% if not @articles_no_reply.empty? %>
      <tr align="left">
        <th></th>
        <th>date</th>
        <th>Author</th>
        <th>Subject</th>
        <th>#r</th>
        <th>last</th>
        <th>type</th>
        <th>assigned</th>
        <th>status</th>
      </tr>
    <% end %>
  </thead>
  <tbody>
    <% @articles_no_reply.each_with_index do |a, i| %>
      <%= render :partial => "/dashboard/article_line_item", :locals => {:article => a, :row_class => (i%2 == 0 ? "even" : "odd")} %>
    <% end %>

    <% if @articles_no_reply.empty? %>
      <tr class="hint empty" style="font-style: italic;"><td style="text-align:left">empty!</td></tr>
    <% end %>
  </tbody>
</table>


<h3>Open issues</h3>
<table id="open-articles">
  <thead>
    <% if not @articles.empty? %>
      <tr align="left">
        <th></th>
        <th>date</th>
        <th>Author</th>
        <th>Subject</th>
        <th>#r</th>
        <th>last</th>
        <th>type</th>
        <th>assigned</th>
        <th>status</th>
      </tr>
    <% end %>
  </thead>
  <tbody>
    <% @articles.each_with_index do |a, i| %>
      <%= render :partial => "/dashboard/article_line_item", :locals => {:article => a, :row_class => (i%2 == 0 ? "even" : "odd")} %>
    <% end %>

    <% if @articles.empty? %>
      <tr class="hint empty" style="font-style: italic;"><td style="text-align:left">empty!</td></tr>
    <% end %>
  </tbody>
</table>



<h3>Closed issues</h3>
<table id="closed-articles">
  <thead>
  <% if not @closed_articles.empty? %>
    <tr align="left">
      <th></th>
      <th>date</th>
      <th>Author</th>
      <th>Subject</th>
      <th>#r</th>
      <th>last</th>
      <th>type</th>
      <th>assigned</th>
      <th>status</th>
    </tr>
  <% end %>
  </thead>
  <tbody>
    <% @closed_articles.each_with_index do |a, i| %>
      <%= render :partial => "/dashboard/article_line_item", :locals => {:article => a, :row_class => (i%2 == 0 ? "even" : "odd")} %>
    <% end %>

    <% if @closed_articles.empty? %>
      <tr class="hint empty" style="font-style: italic;"><td style="text-align:left">empty!</td></tr>
    <% end %>
  </tbody>
</table>
<br/>

<%= will_paginate @closed_articles %>

